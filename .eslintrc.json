{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
  "plugins": ["import", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": ["warn"],
    "import/no-unresolved": "off",
    "quotes": ["error", "double", { "avoidEscape": true }]
  }
  ,
  "globals": {
    "SpreadsheetApp": "readonly",
    "DriveApp": "readonly",
    "PropertiesService": "readonly",
    "ScriptApp": "readonly",
    "UrlFetchApp": "readonly",
    "Utilities": "readonly",
    "Session": "readonly",
    "Logger": "readonly",
    "LockService": "readonly"
  },
  "overrides": [
    {
      "files": ["apps_script/test/**/*.js", "apps_script/test/**/*.mock.js"],
      "env": { "jest": true },
      "rules": {
        "no-unused-vars": ["warn", { "varsIgnorePattern": "^_", "args": "none" }],
        "no-console": "off"
      }
    }
    ,
    {
      "files": ["apps_script/src/**/*.js"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}
